
@{
    ViewBag.Title = "AddCatgory";

    var categoryInfo = Session["info"] as WebApplication1.Models.tblCategory;
    var btnText = categoryInfo.catId > 0 ? "Update" : "Submit";
}

<h2>Add Catgory</h2>
<br/>

<form method="post" action="AddCatgory">
    <input type="hidden" name="catId" value="@categoryInfo.catId" />
    <div class="form-group">
        <label for="catName">Category Name</label>
        <input type="text" class="form-control" id="catName" name="catName" value="@categoryInfo.catName" placeholder="Enter Category Name">
    </div>
    <button type="submit" class="btn btn-default">@btnText</button>
</form>

<br/>
<hr/>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Category</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.categoryList)
        {
            <tr>
                <td>
                    @item.catId
                </td>
                <td>
                    @item.catName
                </td>
                <td>
                    <a href="EditCategory/@item.catId">Edit</a>
                    <a href="DeleteCategory/@item.catId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
